<!doctype html>
<html lang="en">
<head>
    <link rel="icon" type="image/png" sizes="32x32" href="/imgs/Snorlax.png">
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/styles.css">
    <title><%=body.forms[0].name%></title>
</head>
<body class="fondo color bodyPokemon">
<div class="">
    <div class="row headerRow py-3  text-center">
        <div class="col-5 headerRow mx-auto d-flex justify-content">
            <div class="col-8 headerRow">
                <img class=" imgPokemonLogo" src="/imgs/pokeLogo.png">

            </div>
            <div class="col-4 headerRow my-auto">
                <div>
                    <img class="  imgPokemon " src="/imgs/Snorlax.png">
                </div>

            </div>
        </div>

    </div>
    <div class="row py-3 px-4">
        <div class="col-12 text-center my-5">
            <div >

            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row  px-4 ">
        <div class="col-12  my-3 mx-auto pokeCartas text-center" >
            <div class="card mb-3 cartaPokemon">
                <div class="fotoCard">
                    <img src="<%=body.sprites.front_default%>" class=" card-img-top imgCarta" alt="...">
                </div>
                <div class="card-body pokeCartaTitulo">
                    <p class="card-title titlePokeCard"><%=nombre%><!--name--></p>
                </div>
                <div class="cartaBg ">
                    <div class="row mt-3 d-flex justify-content-center">
                        <% body.types.forEach(function(type) { %> <!--type-->
                            <div class="col-3 px-2 mx-3 text-center typeText " >
                                <div class="colorType">
                                    <p > <%=type.type.name%></p>
                                </div>

                            </div>
                        <% }); %>
                    </div>
                    <div class="row  px-4 statsText">
                        <div class="col-4  my-3 mx-auto text-center" >
                            <p> Weight:  <%=body.weight%></p><!--weight-->
                        </div>
                        <div class="col-4  my-3 mx-auto text-center" >
                            <p> Height:<%=body.height%></p><!--height-->
                        </div>
                        <div class="col-4  my-3 mx-auto text-center" >
                            <p> Experience: <%=body.base_experience%></p><!--experience-->
                        </div>
                    </div>
                    <div class="row py-3 px-4">

                        <div class="col-6  my-3 mx-auto text-center " >
                            <div class="scrollableCamila">
                                <p class="statsText">Moves: </p>
                                <% body.moves.forEach(function(move) { %> <!--Moves-->
                                <p class="textMovAb"> <%=move.move.name%></p>
                                <% }); %>
                            </div>
                        </div>



                        <div class="col-6  my-3 mx-auto text-center" >
                            <div class="abCard"><p class="statsText">Abilities: </p>
                                <% body.abilities.forEach(function(ability) { %><!--abilities-->
                                <p class="textMovAb"> <%=ability.ability.name%></p>
                                <% }); %>
                            </div>

                        </div>


                    </div>
                    <form method="POST" action="/buscarPokemon">
                        <div class="row py-3 px-4">
                            <div class="col-sm-4  my-3 mx-auto text-center " >
                                <button  class="btn btn-primary  submitButton" type="submit" value="<%=prevID%>" name="pokemon">< previous</button>
                            </div>
                            <div class="col-sm-2  my-3 mx-auto text-center" >
                                <p class="typeText"> ID: <%=body.id%></p><!--height-->
                            </div>
                            <div class="col-sm-4  my-3 mx-auto text-center " >
                                <button  class="btn btn-primary submitButton" type="submit" value="<%=nextID%>" name="pokemon">next ></button>

                            </div>
                        </div>
                    </form>

                </div>
            </div>

        </div>




    </div>
</div>

</body>


<footer >
    <div class="">
        <div class="row py-3 px-4">
            <div class="col-12 text-center my-5">
                <div >
                    <img class="logo my-4" src="/imgs/pokeLogo.png">
                    <img class="logo my-4" src="/imgs/Snorlax.png">
                </div>
            </div>
        </div>
        <div class="row py-3 px-4">
            <div class="col-12 text-center my-5">
                <div >

                </div>
            </div>
        </div>
    </div>
</footer>
</html>